<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Account - ShortZoid</title>
    <link rel="stylesheet" href="/css/edit.css" type="text/css">
    <link rel="stylesheet" href="/css/header.css" type="text/css">
    <link rel="icon" type="image/x-icon" href="/favicon.svg">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
</head>

<body>
    <header>
        <div class="header">
            <a href="/dashboard" class="logo">ShortZoid</a>
            <i class='bx bx-menu' id="menu-icon"></i>
            <nav class="navbar">
                <a href="/dashboard">Home</a>
                <a href="/dashboard/manage">Manage URLs</a>
                <a href="/dashboard/analytics">Analytics</a>
                <a href="/user/profile">Account</a>
                <a href="/logout">Logout</a>
            </nav>
        </div>
    </header>

    <section id="edit-info">
        <div id="edit-info-box">
            <h2>Edit Profile</h2>
            <form action="/user/profile/edit" method="POST">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="<%= user.name %>" required>
                
                <label for="gender">Gender:</label>
                <select name="gender" id="gender">
                    <option value="Male" <%= user.gender === "Male" ? "selected" : "" %>>Male</option>
                    <option value="Female" <%= user.gender === "Female" ? "selected" : "" %>>Female</option>
                    <option value="Other" <%= user.gender === "Other" ? "selected" : "" %>>Other</option>
                </select>

                <label for="location">Location:</label>
                <input type="text" id="location" name="location" value="<%= user.location || "India" %>">
                
                <div class="container">
                    <button type="submit" class="submit-btn">Update Profile</button>
                </div>
            </form>
        </div>
    </section>

    <script>
        const menuIcon = document.querySelector('#menu-icon');
        const navbar = document.querySelector('.navbar');
        const createUrlSection = document.querySelector('#edit-info');

        menuIcon.addEventListener('click', () => {
            menuIcon.classList.toggle('bx-x');
            navbar.classList.toggle('active');

            if (navbar.classList.contains('active')) {
                createUrlSection.style.marginTop = `${navbar.offsetHeight + 20}px`;
            } else {
                createUrlSection.style.marginTop = '20px';
            }
        });
    </script>
</body>

</html>