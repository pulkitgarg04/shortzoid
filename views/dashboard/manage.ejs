<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage URLs - ShortZoid</title>
    <link rel="stylesheet" href="/css/header.css" type="text/css">
    <link rel="stylesheet" href="/css/manage.css" type="text/css">
    <link rel="icon" type="image/x-icon" href="/favicon.svg">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/69a72a2c24.js" crossorigin="anonymous"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>
</head>

<body>
    <%- include('header') %>

    <section id="filters" style="margin: 20px auto; max-width: 1200px; padding: 20px; background: #fff; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
        <h3 style="margin-bottom: 15px;">Filter URLs</h3>
        <form action="/dashboard/manage" method="GET" style="display: flex; gap: 20px; align-items: center; flex-wrap: wrap;">
            <div class="form-group">
                <label for="folder" style="margin-right: 5px;">Folder:</label>
                <select name="folder" id="folder" style="padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                    <option value="">All Folders</option>
                    <% folders.forEach(folder => { %>
                        <option value="<%= folder._id %>" <%= currentFolder == folder._id ? 'selected' : '' %>><%= folder.name %></option>
                    <% }) %>
                </select>
            </div>
            
            <div class="form-group">
                <label style="display: flex; align-items: center; gap: 5px;">
                    <input type="checkbox" name="password" value="true" <%= (typeof filters !== 'undefined' && filters.password) ? 'checked' : '' %>> 
                    Password Protected
                </label>
            </div>
            
            <div class="form-group">
                <label style="display: flex; align-items: center; gap: 5px;">
                    <input type="checkbox" name="deeplink" value="true" <%= (typeof filters !== 'undefined' && filters.deeplink) ? 'checked' : '' %>> 
                    Deep Links
                </label>
            </div>
            
            <div class="form-group">
                <label style="display: flex; align-items: center; gap: 5px;">
                    <input type="checkbox" name="expiration" value="true" <%= (typeof filters !== 'undefined' && filters.expiration) ? 'checked' : '' %>> 
                    Has Expiration
                </label>
            </div>
            
            <div class="form-group">
                <label style="display: flex; align-items: center; gap: 5px;">
                    <input type="checkbox" name="maxclicks" value="true" <%= (typeof filters !== 'undefined' && filters.maxclicks) ? 'checked' : '' %>> 
                    Has Max Clicks
                </label>
            </div>
            
            <div style="margin-left: auto; display: flex; gap: 10px;">
                <button type="submit" class="btn" style="padding: 8px 20px; background: #6366f1; color: white; border: none; border-radius: 4px; cursor: pointer;">Apply Filters</button>
                <a href="/dashboard/manage" class="btn" style="padding: 8px 20px; background: #e5e7eb; color: #374151; text-decoration: none; border-radius: 4px; display: inline-block;">Clear</a>
            </div>
        </form>
    </section>

    <section id="user-urls">
        <% if (urls && urls.length > 0) { %>
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th scope="col">S.No</th>
                            <th scope="col">Copy</th>
                            <th scope="col">Name</th>
                            <th scope="col">ShortID</th>
                            <th scope="col">Destination</th>
                            <th scope="col">Clicks</th>
                            <th scope="col">QR Code</th>
                            <th scope="col">Download</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% urls.forEach((url, index) => { %>
                            <tr>
                                <td data-label="S.No"><%= index + 1 %></td>
                                <td data-label="Copy Shorten URL" class="copy-btn" onclick="copyURL('<%= url.shortID %>')">
                                    <i class="fa-solid fa-copy"></i>
                                </td>
                                <td data-label="Name" class="truncate" title="<%= url.name || url.shortID %>"><%= url.name || url.shortID %></td>
                                <td data-label="ShortID"><a href="https://shortzoid.vercel.app/r/<%= url.shortID %>"><%= url.shortID %></a></td>
                                <td data-label="Destination" class="truncate" title="<%= url.redirectURL %>"><a href="<%= url.redirectURL %>"><%= url.redirectURL %></a></td>
                                <td data-label="Clicks"><%= url.visitHistory.length %></td>
                                <td data-label="QR Code">
                                    <% if (url.qrcode) { %>
                                        <img src="<%= url.qrcode %>" alt="QR Code" height="50px">
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td data-label="Download QR Code">
                                    <button class="btn-sm" onclick="downloadQRCode('<%= url.qrcode %>', '<%= url.shortID %>')">Download</button>
                                </td>
                                <td data-label="Delete Shorten URL" class="delete-btn" onclick="deleteURL('<%= url.shortID %>')">
                                    <i class="fa-solid fa-trash"></i>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p>No URLs found.</p>
        <% } %>
    </section>    

    <script>
        function copyURL(shortID) {
            const copyText = `https://shortzoid.vercel.app/r/${shortID}`;
            navigator.clipboard.writeText(copyText).then(() => {
                alert("Copied the URL: " + copyText);
            }).catch(err => {
                alert("Failed to copy the URL");
            });
        }

        function deleteURL(shortID) {
            if (confirm("Are you sure you want to delete this URL?")) {
                fetch(`/url/delete/${shortID}`, {
                    method: 'DELETE',
                }).then(() => {
                    location.reload();
                });
            }
        }

        function downloadQRCode(qrCodeUrl, shortID) {
            fetch(qrCodeUrl)
                .then(response => response.blob())
                .then(blob => {
                    const fileName = `${shortID}-qrcode.png`;
                    saveAs(blob, fileName);
                })
                .catch(err => {
                    console.error("Error downloading QR code:", err);
                    alert("Failed to download QR code.");
                });
        }

        const menuIcon = document.querySelector('#menu-icon');
        const navbar = document.querySelector('.navbar');
        const createUrlSection = document.querySelector('#user-urls');

        menuIcon.addEventListener('click', () => {
            menuIcon.classList.toggle('bx-x');
            navbar.classList.toggle('active');

            if (navbar.classList.contains('active')) {
                createUrlSection.style.marginTop = `${navbar.offsetHeight + 20}px`;
            } else {
                createUrlSection.style.marginTop = '20px';
            }
        });
    </script>
</body>

</html>