<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShortZoid - URL Shortener</title>
    <link rel="stylesheet" href="/css/dashboard.css" type="text/css">
    <link rel="stylesheet" href="/css/header.css" type="text/css">
    <link rel="icon" type="image/x-icon" href="/favicon.svg">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>
</head>

<body>
    <%- include('header') %>
    
    <section id="create-url">
        <h2>Create New</h2>
        <form action="/url" method="POST">
            <div>
                <label for="name">Name: </label>
                <input type="text" name="name" id="name">
            </div>
            <div>
                <label for="url">Destination: </label>
                <input type="text" name="url" id="url" placeholder="https://example.com" required>
            </div>
            <div class="btn-container">
                <button type="submit" class="btn">Generate</button>
            </div>
        </form>
    </section>

    <div>
        <% if (typeof id !=='undefined' ) { %>
        <div id="generated-url-box">
            <p>URL Generated: <span id="generated-url">https://shortzoid.vercel.app/r/<%= id %></span>
                <button type="button" class="btn copy-btn" onclick="copyURL()">Copy <i class="fa fa-copy"></i></button>
                <button type="button" class="btn copy-btn" onclick="downloadQRCode('<%= qrcode %>', 'shortzoid.vercel.app<%= id %>')">Download QR Code</button>
            </p>
        </div>
        <% } %>
    </div>

    <% if (typeof error !== 'undefined') { %>
      <div id="toast" class="toast-error"><%= error %></div>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const toast = document.getElementById('toast');
          if (toast) {
            toast.style.display = 'block';
            setTimeout(() => {
              toast.style.display = 'none';
              window.location.href = '/dashboard';
            }, 2500);
          }
        });
      </script>
      <style>
        .toast-error {
          display: none;
          position: fixed;
          top: 30px;
          left: 50%;
          transform: translateX(-50%);
          background: #e74c3c;
          color: #fff;
          padding: 16px 32px;
          border-radius: 6px;
          font-size: 1.1em;
          z-index: 9999;
          box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        }
      </style>
    <% } %>

    <script>
        function copyURL() {
            const copyText = document.getElementById("generated-url").innerText;
            navigator.clipboard.writeText(copyText).then(() => {
                alert("Copied the URL: " + copyText);
            }).catch(err => {
                alert("Failed to copy the URL");
            });
        }

        function downloadQRCode(qrCodeUrl, shortID) {
            fetch(qrCodeUrl)
                .then(response => response.blob())
                .then(blob => {
                    const fileName = `${shortID}-qrcode.png`;
                    saveAs(blob, fileName);
                })
                .catch(err => {
                    console.error("Error downloading QR code:", err);
                    alert("Failed to download QR code.");
                });
        }

        const menuIcon = document.querySelector('#menu-icon');
        const navbar = document.querySelector('.navbar');
        const createUrlSection = document.querySelector('#create-url');

        menuIcon.addEventListener('click', () => {
            menuIcon.classList.toggle('bx-x');
            navbar.classList.toggle('active');

            if (navbar.classList.contains('active')) {
                createUrlSection.style.marginTop = `${navbar.offsetHeight + 20}px`;
            } else {
                createUrlSection.style.marginTop = '20px';
            }
        });
    </script>
</body>

</html>